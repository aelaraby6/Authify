{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* ✅ Use Node-style resolution instead of bundler */
    "moduleResolution": "Node",

    /* ✅ Disable define-based class fields to work with decorators */
    "useDefineForClassFields": false,

    /* ✅ Disable verbatim module syntax for reflect-metadata to work */
    "verbatimModuleSyntax": false,

    "noEmit": true,
    "jsx": "react-jsx",

    /* ✅ Strict but decorator-compatible */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* ✅ Required for decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
