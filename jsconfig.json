{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "checkJs": true, // ✅ type-check JS files too
    "allowJs": true, // ✅ allow JavaScript files alongside TS
    "resolveJsonModule": true // ✅ allow importing .json files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
